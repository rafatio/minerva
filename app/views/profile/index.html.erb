<% @tag_title = "Informações Cadastrais" %>
<% @tag_subtitle = "Mantenha os seus dados atualizados" %>
<% @counter = 0 %>

<script>
  function isInputNumber(evt) {
    var ch = String.fromCharCode(evt.which);
    if (!(/[0-9]/.test(ch))) {
      evt.preventDefault();
    }
  }
</script>

<div class="alert alert-info">
  Campos obrigatórios estão em <strong>negrito</strong>.
</div>


<div id="accordion">

  <form id="id-form-update-profile" action="/profile" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <!-- Dados Pessoais -->
  <div class="card">
    <div class="card-header" id="headingOne">
      <h5 class="mb-0">
        <button type="button" class="btn btn-link" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Dados Pessoais
        </button>
      </h5>
    </div>
    <div id="collapseOne" class="collapse" aria-labelledby="headingOne">
      <div class="card-body">

        <div class="row">
          <div class="col">
            <div class = "row">
              <label for="person-name" class="col-form-label font-weight-bold">Nome</label>
              <input class="form-control mb-3" name = "person-name" oninvalid="$('#collapseOne').collapse('show')" value="<% if !@person.nil? %><%= @person.name %><% end %>" required>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-1">
            <div class = "row">
              <label for="person-gender" class="col-form-label font-weight-bold">Sexo</label>
              <select name="person-gender" class="form-control selectpicker">
                <option hidden disabled selected value></option>
                <option <% if (!@person.nil?) && @person.gender == "M" %> selected="selected" <% end %> value="M">M</option>
                <option <% if (!@person.nil?) && @person.gender == "F" %> selected="selected" <% end %> value="F">F</option>
              </select>
            </div>
          </div>

          <div class="col-2"></div>
          <div class="col-2">
            <div class = "row">
              <label for="person-birthdate" class="col-form-label font-weight-bold">Data de Nascimento</label>
              <input class="form-control mb-3" type="date" id="id-person-birthdate" name="person-birthdate" oninvalid="$('#collapseOne').collapse('show')" value="<% if !@person.nil? %><%= @person.birth_date.to_formatted_s(:short_date) %><% end %>" required>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-2">
            <div class = "row">
              <label for="person-cpf" class="col-form-label font-weight-bold">CPF</label>
              <input class="form-control mb-3 cpf" name="person-cpf" oninvalid="$('#collapseOne').collapse('show')" value="<% if !@person.nil? %><%= @person.cpf %><% end %>" required>
            </div>
          </div>
          <div class="col-1"></div>
          <div class="col-2">
            <div class = "row">
              <label for="person-rg" class="col-form-label">RG</label>
              <input class="form-control mb-3" name="person-rg" onkeypress="isInputNumber(event)" value="<% if !@person.nil? %><%= @person.rg %><% end %>" >
            </div>
          </div>
        </div>

      </div> <!-- div class="card-body" -->
    </div>
  </div>
  <!-- Dados Pessoais -->

  <!-- Contato -->
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h5 class="mb-0">
        <button type="button" class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Contato
        </button>
