    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo">
      <div class="card-body">

        <div class="row">
          <div class="col-3">
            <div class = "row">
              <label for="contact-mobile" class="col-form-label font-weight-bold">Celular</label>
              <input class="form-control mb-3 phone_with_ddd" name = "contact-mobile" oninvalid="$('#collapseTwo').collapse('show')" value="<% if !@mobile_contact.nil? %><%= @mobile_contact.value %><% end %>" required>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-3">
            <div class = "row">
              <label for="contact-facebook" class="col-form-label">Facebook</label>
              <input class="form-control mb-3" name="contact-facebook" value="<% if !@facebook_contact.nil? %><%= @facebook_contact.value %><% end %>">
            </div>
          </div>
          <div class="col-1"></div>
          <div class="col-3">
            <div class = "row">
              <label for="contact-linkedin" class="col-form-label">Linkedin</label>
              <input class="form-control mb-3" name="contact-linkedin" value="<% if !@linkedin_contact.nil? %><%= @linkedin_contact.value %><% end %>" >
            </div>
          </div>
          <div class="col-1"></div>
          <div class="col-3">
            <div class = "row">
              <label for="contact-skype" class="col-form-label">Skype</label>
              <input class="form-control mb-3" name="contact-skype" value="<% if !@skype_contact.nil? %><%= @skype_contact.value %><% end %>" >
            </div>
          </div>
        </div>


        <br>
        <table id="table-secondary-mail" class="col-4 order-list">
          <thead>
              <tr>
                  <td>Emails Secundários</td>
              </tr>
          </thead>
          <tbody>
              <tr>
                  <td class="col" hidden>
                      <input type="text" name="no-content" class="form-control" />
                  </td>
                  <td class="col-sm-2"><a class="deleteRow"></a>

                  </td>
              </tr>
              <% @secondary_mail_contacts.each do |mail| %>
                <tr>
                  <td><input type="text" class="form-control" name="contact-secondary-mail<%= @counter %>" value="<%= mail.value %>"/></td>
                  <td><input type="button" class="ibtnDel btn btn-md btn-danger "  value="Excluir"></td>
                </tr>
                <% @counter = @counter + 1 %>
              <% end %>
          </tbody>
          <tfoot>
              <tr>
                  <td colspan="5" style="text-align: left;">
                      <input type="button" class="btn btn-lg btn-block mt-3" id="addrow-secondary-mail" value="Adicionar" />
                  </td>
              </tr>
              <tr>
              </tr>
          </tfoot>
      </table>


      </div>
    </div>
  </div>
  <!-- Contato -->

  <!-- Endereço -->
  <div class="card">
    <div class="card-header" id="headingThree">
