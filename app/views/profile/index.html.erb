              <label for="address-country" class="col-form-label font-weight-bold">País</label>
              <select name="address-country" class="form-control selectpicker" oninvalid="$('#collapseThree').collapse('show')" required>
                <option hidden disabled selected value></option>
                <% @country_list.each do |country| %>
                  <option value=<%= country.name %> <% if (!@address.nil?) && @address.country_id == country.id %> selected="selected" <% end %> ><%= country.name %></option>
                <% end %>
              </select>
          </div>
        </div>

        <div class="row">
          <div class="col-2">
            <label for="address-cep" class="col-form-label font-weight-bold" hidden>CEP</label>
            <input type="text" class="form-control mb-3 cep" name="address-cep" data-provider="zipcode" value="<% if !@address.nil? %><%= @address.zip_code %><% end %>" hidden>

            <label for="address-zipcode" class="col-form-label">Código Postal</label>
            <input type="text" class="form-control mb-3" name="address-zipcode" value="<% if !@address.nil? %><%= @address.zip_code %><% end %>">
          </div>
        </div>

        <label for="address-street" class="col-form-label font-weight-bold">Logradouro</label>
        <input type="text" class="form-control mb-3" name="address-street" data-provider="street" oninvalid="$('#collapseThree').collapse('show')" value="<% if !@address.nil? %><%= @address.street %><% end %>" required>

        <div class="row">
          <div class="col-2">
            <label for="address-number" class="col-form-label">Número</label>
            <input type="text" class="form-control mb-3" name="address-number" value="<% if !@address.nil? %><%= @address.number %><% end %>" >
          </div>

          <div class="col-2"></div>

          <div class="col-3">
            <label for="address-complement" class="col-form-label">Complemento</label>
            <input type="text" class="form-control mb-3" name="address-complement" value="<% if !@address.nil? %><%= @address.complement %><% end %>" >
          </div>

        </div>

        <div class="row">
          <div class="col-3">
            <label for="address-neighborhood" class="col-form-label">Bairro</label>
            <input type="text" class="form-control mb-3" name="address-neighborhood" data-provider="neighborhood" value="<% if !@address.nil? %><%= @address.neighborhood %><% end %>">
          </div>

          <div class="col-1"></div>

          <div class="col-3">
            <label for="address-city" class="col-form-label">Cidade</label>
            <input type="text" class="form-control mb-3" name="address-city" data-provider="city" value="<% if !@address.nil? %><%= @address.city %><% end %>">
          </div>

          <div class="col-1"></div>

          <div class="col-3">
            <label for="address-state" class="col-form-label">Estado</label>
            <input type="text" class="form-control mb-3" name="address-state" data-provider="state" value="<% if (!@address.nil?) && (!@address.state.nil?) %><%= @address.state.code %><% elsif !@address.nil? %><%= @address.state_name %><% end %>">
          </div>

        </div>

      </div>
    </div>
  </div>
  <!-- Endereço -->

