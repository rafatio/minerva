<!DOCTYPE html>
<html>
  <head>
    <% if @title || @tag_title %>
      <title><%= @title || @tag_title %> | Touts</title>
    <% else %>
      <title>Touts: Artes Incr√≠veis em Camisetas, Almofadas e Posters</title>
    <% end %>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://assets.pagar.me/pagarme-js/3.0/pagarme.min.js"></script>
  </head>

  <body>
    <%= render 'layouts/shared/navbar' %>
    <%= render 'layouts/shared/alerts' %>

    <div class="container-fluid mt-3">
      <div class="row">
        <% if current_user %>
          <div class="col-md-3 mb-3">
            <%= render 'layouts/shared/sidebar' %>
          </div>

          <div class="col-md-9">
            <div class="card">
              <div class="card-header">
                <h5 class="h1 card-title"><%= @tag_title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= @tag_subtitle %></h6>
              </div>
              <div class="card-body">
                <p class="card-text">
                  <%= yield %>
                </p>
              </div>
            </div>
          </div>

        <% else %>
          <div class="col-12"><%= yield %></div>
        <% end %>
      </div>
    </div>
  </body>
</html>
